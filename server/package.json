{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env --import=tsx  --watch src/server.ts ",
    "build": "rimraf dist && npx tsc --noEmit false && tsc-alias",
    "start": "node --env-file=.env dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "DB_MIGRATING=true node --env-file=.env --import=tsx src/db/migrate.ts ",
    "db:seed": "DB_SEEDING=true node --env-file=.env --import=tsx src/db/seed.ts",
    "test": "vitest --mode development"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.5.1",
    "express": "^4.21.1",
    "postgres": "^3.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.0",
    "drizzle-kit": "^0.31.4",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "keywords": [],
  "description": ""
}
